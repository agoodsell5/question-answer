{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "rules": {
    "semi": 2,
    "quotes": [2, "single"],
    "arrow-parens": "warn",
    "no-var": "warn",
    "spaced-comment": "warn"
  }
}
